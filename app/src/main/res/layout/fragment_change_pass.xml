<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".Fragment.ChangePassFragment" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/change_password" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="Vui lòng nhập mật khẩu bên dưới để tiến hành đổi mật khẩu" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        app:passwordToggleEnabled="true"
        app:boxStrokeColor="#FE8B00"
        app:endIconTint="#FE8B00"
        app:hintTextColor="#FE8B00"
        app:startIconTint="#FE8B00"
        app:passwordToggleTint="#FE8B00"
        app:startIconDrawable="@drawable/baseline_lock">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPassOld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="Mật Khẩu Cũ" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        app:passwordToggleEnabled="true"
        app:boxStrokeColor="#FE8B00"
        app:endIconTint="#FE8B00"
        app:hintTextColor="#FE8B00"
        app:startIconTint="#FE8B00"
        app:passwordToggleTint="#FE8B00"
        app:startIconDrawable="@drawable/baseline_lock">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="Mật Khẩu" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        app:passwordToggleEnabled="true"
        app:boxStrokeColor="#FE8B00"
        app:endIconTint="#FE8B00"
        app:hintTextColor="#FE8B00"
        app:startIconTint="#FE8B00"
        app:passwordToggleTint="#FE8B00"
        app:startIconDrawable="@drawable/baseline_lock">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="Nhập Lại Mật Khẩu" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveChangePass"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Lưu Thay Đổi"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/resource_background_button"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelChangePass"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@drawable/resource_background_button"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>