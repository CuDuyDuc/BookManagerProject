<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Fragment.SplashFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="327dp"
        android:src="@drawable/library_screen1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/dark_blue"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="Trải Nghiệm Quản Lý Thư Viện Dễ Dàng Hơn Bao Giờ Hết" />

    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="#707070" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Bạn có thể sử dụng bất kỳ lúc nào, bất kỳ nơi đâu, thao tác dễ dàng, nhanh chóng. Quan trọng là độ bảo mật cao."
        android:textColor="@color/dark_blue"/>

</LinearLayout>