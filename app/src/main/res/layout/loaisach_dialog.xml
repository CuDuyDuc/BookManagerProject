<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:background="@drawable/custom_addtv_form_topleft_topright"
        android:gravity="center"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:text="Loại Sách" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="272dp"
            app:srcCompat="@drawable/add_loaisach" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#FE8B00"
            app:boxStrokeColor="#FE8B00"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMaLoaiSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã Loại Sách" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#FE8B00"
            app:boxStrokeColor="#FE8B00"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTenLoaiSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên Loại Sách" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="35dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveLS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:textAllCaps="true"
                android:background="@drawable/resource_background_button"
                android:text="Cập Nhật" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelLS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:background="@drawable/resource_background_button"
                android:layout_weight="1"
                android:text="Hủy" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>